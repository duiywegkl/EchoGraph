# EchoGraph environment template
# Copy this file to .env and fill in the sensitive values.
# Do NOT commit your real .env to version control.

# --- Project metadata (non-sensitive) ---
PROJECT_NAME=EchoGraph
VERSION=1.0.0
DEBUG=true

# --- LLM configuration ---
# Required: your LLM API key (e.g., DeepSeek/OpenAI-compatible)
OPENAI_API_KEY=
# Optional: API Base URL and default model. Leave commented to use built-in defaults.
#OPENAI_API_BASE_URL=https://api.deepseek.com/v1
#DEFAULT_MODEL=deepseek-v3.1
# Whether to enable streaming responses from LLM (true/false)
LLM_STREAM_OUTPUT=false

# --- Logging & Server ---
# Log level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO
# API server port
API_SERVER_PORT=9543
# HTTP request timeouts (seconds)
API_TIMEOUT=15
HEALTH_CHECK_TIMEOUT=10

# --- Sliding window / Agent ---
SLIDING_WINDOW_SIZE=4
PROCESSING_DELAY=1
ENABLE_ENHANCED_AGENT=true
ENABLE_CONFLICT_RESOLUTION=true

# --- UI behavior ---
ANIMATION_INTERVAL=500
MAX_MESSAGES=1000
POLL_INTERVAL=3

# --- SillyTavern integration ---
SILLYTAVERN_HOST=localhost
SILLYTAVERN_PORT=8000
SILLYTAVERN_TIMEOUT=10
